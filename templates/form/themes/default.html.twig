{% block form_errors %}
	{% if errors|length > 0 %}
		<ul class="help-block list-unstyled">
			{% for error in errors %}
				<li>
					{{ error.getMessage|trans|typo|raw }}
				</li>
			{% endfor %}
		</ul>
	{% endif %}
{% endblock %}

{% block form_row %}
	{% set isValid = form.vars.valid %}
	<div class="form-group{% if not isValid %} {{ ' has-error' }} {% endif %}">
		{{ form_label(form, null, {
			'label_attr': {
				'class': 'control-label',
			},
		}) }}
		{{ form_widget(form, {
			'attr': {
				'class': 'form-control',
			},
		}) }}
		{{ form_errors(form) }}
	</div>
{% endblock %}